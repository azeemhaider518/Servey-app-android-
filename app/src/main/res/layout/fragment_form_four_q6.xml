<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ededed"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/topLable"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#E1E2D4"
        android:text="6 of 9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/textview"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#808080"

        android:maxLines="5"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLable"
        android:text="Who captured the polling Station or polling booths? \n پولنگ اسٹیشن یا پولنگ بوتھ پر کس نے قبضہ کیا؟"
        />


    <EditText
        android:id="@+id/q6EditText"
        android:textColor="#ffffff"
        android:layout_below="@id/textview"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_shape_edittext"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>
</RelativeLayout>

